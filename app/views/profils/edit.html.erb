<h1> Mon Profil  </h1>

<%= form_with(model: current_user, url: profils_update_path, local: true) do |form| %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price %>
  </div>

  <div>
    <%= form.label :lang, style: "display: block" %>
    <%= form.text_field :lang %>
  </div>

  <div>
    <%= form.label :nationality, style: "display: block" %>
    <%= form.text_field :nationality %>
  </div>

  <div>
    <%= form.label :skills, "Enter your skill separate by coma", style: "display: block" %>
    <%= form.text_area :skills, value: current_user.skills.pluck(:name) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>